<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mechanman.mechanman_development_facility.setDevelopTime">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="底片"
        android:id="@+id/textView6"
        android:textSize="10pt"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/film"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-10dp"
        android:layout_above="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="藥水"
        android:id="@+id/textView7"
        android:textSize="10pt"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/developer"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/film"
        android:layout_alignStart="@+id/film"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/textView8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增減感"
        android:id="@+id/textView8"
        android:textSize="10pt"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:linksClickable="false"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/push"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/developer"
        android:layout_alignStart="@+id/developer"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/search"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/search"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:textSize="6pt"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="總時間"
        android:id="@+id/textView9"
        android:textSize="10pt"
        android:linksClickable="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/push"
        android:layout_toStartOf="@+id/push"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/totalTime"
        android:width="60dp"
        android:textSize="10pt"
        android:editable="true"
        android:enabled="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sec"
        android:id="@+id/textView10"
        android:textSize="10pt"
        android:linksClickable="false"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/totalTime"
        android:layout_toEndOf="@+id/totalTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="靜止時間"
        android:id="@+id/textView11"
        android:layout_marginTop="10dp"
        android:textSize="10pt"
        android:layout_below="@+id/totalTime"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/stopTime"
        android:width="60dp"
        android:textSize="10pt"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:enabled="true"
        android:editable="true"
        android:layout_marginBottom="-10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sec"
        android:id="@+id/textView12"
        android:textSize="10pt"
        android:linksClickable="false"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/stopTime"
        android:layout_toEndOf="@+id/stopTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轉動時間"
        android:id="@+id/textView13"
        android:layout_marginTop="20dp"
        android:textSize="10pt"
        android:layout_below="@+id/stopTime"
        android:layout_toLeftOf="@+id/stopTime"
        android:layout_toStartOf="@+id/stopTime"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/rollingTime"
        android:width="60dp"
        android:textSize="10pt"
        android:enabled="true"
        android:editable="true"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="-10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sec"
        android:id="@+id/textView14"
        android:textSize="10pt"
        android:linksClickable="false"
        android:layout_alignTop="@+id/textView13"
        android:layout_toRightOf="@+id/stopTime"
        android:layout_toEndOf="@+id/stopTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轉　　速"
        android:id="@+id/textView15"
        android:layout_below="@+id/rollingTime"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="20dp"
        android:textSize="10pt"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollingSpeed"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/totalTime"
        android:layout_alignStart="@+id/totalTime"
        android:layout_marginTop="-5dp"
        android:layout_above="@+id/back"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/back"
        android:layout_below="@+id/textView15"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:layout_marginTop="10dp"
        android:textSize="10pt"/>

</RelativeLayout>
